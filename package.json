{
  "name": "alpha-web-automation",
  "private": true,
  "workspaces": [
    "apps/desktop",
    "packages/agent",
    "packages/shared"
  ],
  "scripts": {
    "build:agent": "npm run build --prefix packages/agent",
    "predev": "npm run build:agent",
    "dev:ui": "npm run dev --prefix apps/desktop/ui",
